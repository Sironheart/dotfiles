{
  "theme": "Flexoki Dark",
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "max_tabs": 1,
  "agent": {
    "always_allow_tool_actions": true
  },
  "soft_wrap": "none",
  "autosave": "on_focus_change",
  "buffer_font_size": 14,
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false,
    "default_width": 0
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "languages": {
    "Kotlin": {
      "language_servers": [
        "kotlin-lsp",
        "!kotlin-language-server"
      ]
    }
  },
  "project_panel": {
    "default_width": 120
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "scroll_beyond_last_line": "off",
  "ui_font_size": 14,
  "vim_mode": true,
  "terminal": {
    "button": false,
    "copy_on_select": true
  }
}
